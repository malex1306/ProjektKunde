<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width"/>
    <title>@ViewBag.Title - ProjektKunde</title>
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light mb-3">
    <div class="container-fluid">
        <a class="navbar-brand" href="@Url.Action("Index", "Home")">ProjektKunde</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Home")">Ãœbersicht</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Create", "Home")">Neues Projekt</a>
                </li>
            </ul>

            <form class="d-flex" asp-controller="Home" asp-action="Index" method="get">
                <input class="form-control me-2" type="search" name="searchString" placeholder="Projekte suchen..."
                       value="@Context.Request.Query["searchString"]" />
                <button class="btn btn-outline-success" type="submit">Suchen</button>
            </form>
        </div>
    </div>
</nav>

<div class="container">
    @RenderBody()
</div>

<script src="~/lib/bootstrap/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
</body>
</html>